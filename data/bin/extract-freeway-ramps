#!/usr/bin/env bash

SCRIPT_NAME=`basename "$0"`

function usage {
  cat <<EOS
Usage: $SCRIPT_NAME my-planet-input.osm.pbf
EOS
}

INPUT_FILE=$1
if [ -z $INPUT_FILE ]
then
  echo 'missing input'
  usage
  exit 1
fi

osmosis --read-pbf $INPUT_FILE \
  --tf accept-ways highway=motorway_link \
  --tf reject-relations \
  --used-node \
  --write-xml freeway_ramps.osm


